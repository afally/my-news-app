{
  "name": "@my-news-app/express-backend",
  "version": "1.0.0",
  "description": "Backend for my-news-app",
  "main": "dist/server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "server": "npm run build && nodemon dist/server.js",
    "client": "npm start --prefix client",
    "test": "jest --detectOpenHandles",
    "dev": "concurrently \"npm run server\" \"npm run test:watch\""
  },
  "author": "Ayodele",
  "license": "MIT",
  "dependencies": {
    "ansi-regex": "^6.0.1",
    "axios": "^0.21.4",
    "body-parser": "^1.19.0",
    "config": "3.3.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.2",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "nodemon": "^2.0.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": "14.0"
  }
}
